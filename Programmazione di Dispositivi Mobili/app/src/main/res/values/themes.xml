<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Verbose" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/verbose_logo_background</item>
        <item name="colorPrimaryVariant">#00655C</item>
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#FFEB3B</item>

        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/verbose_nav_icon</item>
        <item name="colorOnSurfaceVariant">@color/verbose_nav_icon</item>


        <item name="android:colorActivatedHighlight">@color/verbose_ripple</item>
        <item name="android:statusBarColor">@color/verbose_logo_background</item>


        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorContainer">#FF0000</item>
        <item name="colorOnContainer">#FF0000</item>
        <item name="colorSecondaryContainer">#00000000</item> <!-- LUI -->
        <item name="colorOnSecondaryContainer">#00655C</item>
    </style>

    <style name="Theme.Verbose" parent="Base.Theme.Verbose" />

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/tab_selector</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/verbose_logo_background</item>
    </style>
</resources>