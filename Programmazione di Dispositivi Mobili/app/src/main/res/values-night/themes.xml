<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Verbose" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/verbose_logo_background</item>
        <item name="colorPrimaryVariant">#00655C</item>
        <item name="colorSecondary">@color/verbose_logo_background</item>
        <item name="colorSecondaryVariant">#FFEB3B</item>

        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/verbose_nav_icon</item>
        <item name="colorOnSurfaceVariant">@color/verbose_nav_icon</item>


        <item name="android:colorActivatedHighlight">@color/verbose_ripple</item>
        <item name="android:statusBarColor">@color/verbose_logo_background</item>


        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorContainer">#FF0000</item>
        <item name="colorOnContainer">#FF0000</item>
        <item name="colorSecondaryContainer">#00000000</item> <!-- Navbar selected item background color -->
        <item name="colorOnSecondaryContainer">#00655C</item> <!-- Navbar selected item fill color -->
    </style>
</resources>